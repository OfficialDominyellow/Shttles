        <activity
            android:name=".DrinkDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".DrinkOrderDetailPopActivity"
            android:theme="@style/AppTheme.Popup">
        </activity>

        <activity
            android:name=".FoodListActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".FoodOrderDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
